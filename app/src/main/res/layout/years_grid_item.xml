<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@color/colorAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/mainArcProgress"
        android:layout_width="@dimen/arc_progress_width"
        android:layout_height="@dimen/arc_progress_height"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        custom:arc_progress="45"
        custom:arc_bottom_text="MATH"
        custom:arc_max="100"
        custom:arc_bottom_text_size="@dimen/arc_progress_textsize"
        custom:arc_finished_color="@color/arc_progress_finished_color"
        custom:arc_text_color="@color/arc_progress_text_color"
        custom:arc_unfinished_color="@color/arc_progress_unfinished_color" />

</LinearLayout>